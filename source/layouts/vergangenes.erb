<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport"
        content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Use the title from a page's frontmatter if it has one -->
  <title>Der Chor - <%= current_page.data.title %></title>
  <%= stylesheet_link_tag "styles" %>
  <%= javascript_include_tag "application" %>
</head>
<body>

<%= partial 'layouts/main_navigation' %>

<main>
  <h1></h1>
  <h1><%= current_page.data.title %></h1>
  <div class="grid grid-large">
    <div class="grid-width-4 text-content">
      <%= yield %>
    </div>
    <div class="grid-width-8">
      <h2>Konzerte</h2>
      <div class="concert-list">
        <% concerts.reverse.each do |concert| %>
          <a href="<%= concert.url %>" class="concert-preview concert-preview-link shadow">
            <div class="concert-preview-image" style="background-image: url(<%= concert.data.featured_image_path %>)"></div>
            <div class="concert-preview-title">
              <small><%= concert.data.year %></small><br />
              <%= concert.data.name %>
            </div>
          </a>
        <% end %>
      </div>
<!--      TODO POST-->
      <h2>Anderes</h2>
      <div class="concert-list">
<!--        {% for post in site.posts %}-->
        <a href="{{ post.url | relative_url }}" class="concert-preview concert-preview-link shadow">
          <div class="concert-preview-title"><small>{{post.date | date: "%Y"}}</small><br />{{ post.title }}</div>
        </a>
      </div>
    </div>
  </div>
</main>

